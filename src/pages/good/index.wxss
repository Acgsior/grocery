.good-swiper {
  height: 800rpx;
}
.good-swiper-item-img {
  width: 100%;
  height: 100%;
}
.good-base {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
}
.good-base-name,
.good-base-price {
  line-height: 40rpx;
}
.good-base-price-before {
  margin: 0 10rpx;
  text-decoration: line-through;
}
.good-base-price-now {
  margin: 0 10rpx;
  color: #7b0f16;
  font-size: 40rpx;
  font-weight: bold;
}
.good-info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-top: 15rpx solid #eeeeee;
  line-height: 26rpx;
}
.good-info-promotion-type {
  font-size: 20rpx;
  padding: 5rpx;
  color: #f0f0f0;
  background-color: orange;
}
.good-info-promotion-description {
  margin-left: 10rpx;
}
.good-info-share {
  width: 32rpx;
  height: 32rpx;
}
.good-tips {
  border-top: 5rpx solid #eeeeee;
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 30rpx;
}
.good-tips-item {
  display: flex;
  margin-right: 5rpx;
  padding: 10rpx;
  line-height: 26rpx;
}
.good-tips-item-icon {
  margin-right: 5rpx;
}
.good-reviews {
  border-top: 15rpx solid #eeeeee;
  padding: 10rpx 30rpx;
  margin-bottom: 80rpx;
}
.good-reviews-summary {
  display: block;
  margin: 20rpx 0;
  font-size: 30rpx;
}
.good-reviews-info {
  display: flex;
  flex-direction: column;
}
.good-reviews-info-item {
  padding: 20rpx;
  border-top: 5rpx solid #eeeeee;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
}
.good-reviews-info-item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.good-reviews-info-item-header > text,
.good-reviews-info-item-content {
  display: block;
}
.good-control-bar {
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  width: 100vw;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  padding-left: 30rpx;
  background-color: #eeeeee;
  opacity: 0.8;
}
.good-control-bar-buttons {
  margin: 15rpx 0;
  display: flex;
  align-items: center;
}
.good-control-bar-buttons > .icon {
  height: 45rpx;
  width: 45rpx;
  padding: 0 20rpx;
  border-right: 5rpx solid #e0e0e0;
}
.good-control-bar-buttons > .icon.icon-cart {
  border-right: none;
}
.good-control-bar-add-to-cart {
  background-color: #7b0f16;
  color: #e0e0e0;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.good-control-bar-add-to-cart > view {
  margin: 0 50rpx;
}
.good-add-to-cart-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: #000000;
  opacity: 0.6;
}
.good-add-to-cart-layer {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100vw;
  flex-direction: column;
  background-color: #fefefe;
}
.good-add-to-cart-layer.active {
  display: flex;
}
.good-add-to-cart-layer .good-sku-info {
  display: flex;
  height: 200rpx;
  padding: 0 20rpx;
}
.good-add-to-cart-layer .good-sku-info-img {
  width: 200rpx;
}
.good-add-to-cart-layer .good-sku-info-img image {
  width: 100%;
  height: 100%;
  margin-top: -60rpx;
  border-radius: 5rpx;
}
.good-add-to-cart-layer .good-sku-info-base {
  margin-left: 30rpx;
  padding: 20rpx 0;
}
.good-add-to-cart-layer .good-sku-info-categories {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}
.good-add-to-cart-layer .good-sku-info-categories-item {
  border-bottom: 2rpx solid #eeeeee;
}
.good-add-to-cart-layer .good-sku-info-categories-item-subject {
  text-transform: capitalize;
}
.good-add-to-cart-layer .good-sku-info-categories-item-subject,
.good-add-to-cart-layer .good-sku-info-categories-item-values {
  margin: 20rpx 0;
  width: 100%;
}
.good-add-to-cart-layer .good-sku-info-categories-item-values {
  display: flex;
  flex-wrap: wrap;
}
.good-add-to-cart-layer .good-sku-info-categories-item-values view {
  margin: 0 10rpx;
  padding: 10rpx 20rpx;
  background-color: #eeeeee;
  border-radius: 5rpx;
}
.good-add-to-cart-layer .good-sku-info-categories-item-values view.selected {
  background-color: #7b0f16;
  color: #e0e0e0;
}
.good-add-to-cart-layer .good-sku-info-count {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
  padding: 0 20rpx;
}
.good-add-to-cart-layer .good-sku-info-count-subject {
  display: flex;
  align-items: center;
}
.good-add-to-cart-layer .good-sku-info-count-counter {
  display: flex;
  line-height: 26rpx;
}
.good-add-to-cart-layer .good-sku-info-count-counter-minus,
.good-add-to-cart-layer .good-sku-info-count-counter-plus {
  background-color: #e0e0e0;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
}
.good-add-to-cart-layer .good-sku-info-count-counter-minus {
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
}
.good-add-to-cart-layer .good-sku-info-count-counter-plus {
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
}
.good-add-to-cart-layer .good-sku-info-count-counter input {
  width: 80rpx;
  padding: 10rpx;
  border-top: 2rpx solid #e0e0e0;
  border-bottom: 2rpx solid #e0e0e0;
  height: 1em;
  min-height: 1em;
  line-height: 1em;
  text-align: center;
}
.good-add-to-cart-layer .good-sku-info-add-to-cart {
  width: 100vw;
  background-color: #7b0f16;
  color: #e0e0e0;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}
