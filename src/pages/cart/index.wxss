.cart-list {
  display: flex;
  flex-direction: column;
}
.cart-list-item {
  display: flex;
  border-top: 5rpx solid #eeeeee;
  padding: 20rpx 30rpx;
}
.cart-list-item:last-child {
  border-bottom: 5rpx solid #eeeeee;
}
.cart-list-item-img {
  width: 160rpx;
  height: 200rpx;
}
.cart-list-item-img image {
  border-radius: 5rpx;
  width: 100%;
  height: 100%;
}
.cart-list-item-base {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  box-sizing: border-box;
  margin-left: 20rpx;
}
.cart-list-item-info {
  display: flex;
  flex-direction: column;
}
.cart-list-item-info-line,
.cart-list-item-info-promotion {
  display: flex;
  justify-content: space-between;
  padding-top: 5rpx;
  font-size: 24rpx;
}
.cart-list-item-info-name,
.cart-list-item-info-price {
  font-weight: bold;
  font-size: 26rpx;
}
.cart-list-item-info-price {
  color: #7b0f16;
}
.cart-list-item-info-price-before {
  font-weight: bold;
  text-decoration: line-through;
}
.cart-list-item-info-counter {
  display: flex;
  line-height: 26rpx;
}
.cart-list-item-info-counter-minus,
.cart-list-item-info-counter-plus {
  background-color: #e0e0e0;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  font-weight: bold;
}
.cart-list-item-info-counter-minus {
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
}
.cart-list-item-info-counter-plus {
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
}
.cart-list-item-info-counter input {
  width: 80rpx;
  padding: 10rpx;
  border-top: 2rpx solid #e0e0e0;
  border-bottom: 2rpx solid #e0e0e0;
  height: 1em;
  min-height: 1em;
  line-height: 1em;
  text-align: center;
}
.cart-list-item-info-delete {
  display: flex;
  align-items: center;
  padding: 5rpx 10rpx;
}
.cart-list-item-control {
  display: flex;
  justify-content: space-between;
}
.cart-summary {
  display: flex;
  flex-direction: column;
  border-bottom: 5rpx solid #eeeeee;
}
.cart-summary-total,
.cart-summary-shipping {
  padding: 20rpx 30rpx;
  text-align: right;
  display: flex;
  justify-content: flex-end;
}
.cart-summary-label {
  font-weight: bold;
}
.cart-summary-amount {
  width: 30vw;
  display: flex;
  justify-content: flex-end;
}
.cart-summary-sub-total-before,
.cart-summary-shipping-total-before {
  text-decoration: line-through;
}
.cart-summary-sub-total,
.cart-summary-shipping-total {
  color: #7b0f16;
  margin-left: 10rpx;
}
.cart-continue {
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  border-bottom: 5rpx solid #eeeeee;
}
.cart-footer-control {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eeeeee;
  position: fixed;
  bottom: 0;
  width: 100vw;
  font-size: 30rpx;
}
.cart-footer-control-total {
  margin-left: 30rpx;
  padding: 30rpx 0;
}
.cart-footer-control-total-label {
  font-weight: bold;
}
.cart-footer-control-total-amount {
  margin-left: 20rpx;
  color: #7b0f16;
}
.cart-footer-control-checkout {
  padding: 30rpx 20rpx;
  color: #e0e0e0;
  font-weight: bold;
  background-color: #7b0f16;
}
.cart-empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
.cart-empty-msg {
  font-size: 40rpx;
}
