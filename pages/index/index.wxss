/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  font-size: 0.7em;
}

.index-search {
  display: flex;
  justify-content: center;
  margin: 15rpx;
}

.index-search-input {
  width: 85%;
  background-color: #eee;
  border-radius: 5rpx;
  padding: 0 10rpx;
}

.index-menu {
  display: flex;
  justify-content: space-around;
  margin: 15rpx;
}

.index-menu-item {
  padding: 5rpx;
}

.index-swiper {
  height: 400rpx;
}

.index-swiper-item {
  display: flex;
}

.index-swiper-item-img {
  width: 100%;
}

.index-tips {
  display: flex;
  justify-content: space-around;
  margin: 20rpx;
}

.index-goods {
  display: flex;
  justify-content: space-around;
  margin: 15rpx;
}

.index-goods-left, .index-goods-right {
  display: flex;
  flex-direction: column;
  width: 45vw;
}

.index-goods-info {
  padding: 15rpx;
  border-radius: 5rpx;
  background-color: #e0e0e0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.index-goods-info-img {
  width: 40vw;
  margin-bottom: 20rpx;
}

.index-goods-info-label {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.index-goods-info-name,
.index-goods-info-price {
  display: block;
  line-height: 2em;
  min-height: 40rpx;
}

.index-goods-info-price-before {
  display: inline-block;
  margin: 0 10rpx;
  text-decoration: line-through;
}

.index-goods-info-price-now {
  display: inline-block;
  margin: 0 10rpx;
  color: #7b0f16;
  font-size: 1.6em;
  font-weight: bold;
}