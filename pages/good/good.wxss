.container {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #707070;
}

.good-swiper {
  height: 800rpx;
}

.good-swiper-item-img {
  width: 100%;
  height: 100%;
}

.good-base {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
}

.good-base-name,
.good-base-price {
  line-height: 40rpx;
}

.good-base-price-before {
  margin: 0 10rpx;
  text-decoration: line-through;
}

.good-base-price-now {
  margin: 0 10rpx;
  color: #7b0f16;
  font-size: 40rpx;
  font-weight: bold;
}

.good-info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-top: 15rpx solid #eeeeee;
  line-height: 26rpx
}

.good-info-promotion-type {
  font-size: 20rpx;
  padding: 5rpx;
  color: #f0f0f0;
  background-color: orange;
}

.good-info-promotion-description {
  margin-left: 10rpx;
}

.good-info-share {
  content: url('data:image/svg+xml;base64,');
  width: 32rpx;
  height: 32rpx;
}

.good-tips {
  border-top: 5rpx solid #eeeeee;
}

.good-tips-icon {
  content: url('data:image/svg+xml;base64,');
  width: 26rpx;
  height: 26rpx;
}